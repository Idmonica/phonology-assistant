<?xml version="1.0" encoding="utf-8"?>
<BuildProcess ApplicationName="PA Local">
	<MSBuildInfo exepath="$(WinDir)\Microsoft.NET\Framework\v2.0.50727">
		<solutionfile>$(RootBuildDir)\pa.sln</solutionfile>
		<projectfile></projectfile>
		<targets></targets>
		<properties>Configuration=Release</properties>
		<loggerclass>DoBuilder.MSBuildLogger</loggerclass>;
		<loggerassembly>$(RootBuildDir)\DoBuilder.exe</loggerassembly>
		<loggerargs>logfile="Build Logs\PaBuild.MSBuild.log"</loggerargs>
	</MSBuildInfo>
	<PreBuildCommands>
		<Commands>
			<CommandItem Command="rd">
				<Arg>$(RootBuildDir)\output\release</Arg>
			</CommandItem>
			<CommandItem Command="del">
				<!-- This prevents a compiler warning that SpeechToolsUtils cannot be unregistered. -->
				<Arg>$(RootBuildDir)\src\SpeechToolsUtils\obj\*.*</Arg>
			</CommandItem>
		</Commands>
	</PreBuildCommands>
	<PostBuildCommands>
		<Commands>
			<CommandItem Command="del">
				<Arg>$(RootBuildDir)\output\release\*.tlb</Arg>
				<!-- Arg>$(RootBuildDir)\output\release\*.pdb</Arg -->
				<Arg>$(RootBuildDir)\output\release\pa.xml</Arg>
				<Arg>$(RootBuildDir)\output\release\speechtools.xml</Arg>
			</CommandItem>
			<CommandItem Command="copy">
				<Arg>$(RootBuildDir)\distfiles\usp10.dll</Arg>
				<Arg>$(RootBuildDir)\output\release</Arg>
			</CommandItem>
			<CommandItem Command="md">
				<Arg>$(RootBuildDir)\output\release\Move To Windows.Fonts</Arg>
			</CommandItem>
			<CommandItem Command="copy">
				<Arg>$(RootBuildDir)\distfiles\*.ttf</Arg>
				<Arg>$(RootBuildDir)\output\release\Move To Windows.Fonts</Arg>
			</CommandItem>
			<CommandItem Command="del">
				<Arg>$(RootBuildDir)\DistFiles\PaTrainingProjects.zip</Arg>
			</CommandItem>
			<CommandItem Command="$(RootBuildDir)\7za" WorkingDirectory="$(RootBuildDir)\DistFiles">
				<Arg>a</Arg>
				<Arg>-r</Arg>
				<Arg>-tzip</Arg>
				<Arg>-ssw</Arg>
				<Arg>"$(RootBuildDir)\DistFiles\PaTrainingProjects.zip"</Arg>
				<Arg>"Training Projects\*"</Arg>
				<Arg>-x!.svn</Arg>
			</CommandItem>
			<CommandItem Command="copy">
				<Arg>$(RootBuildDir)\DistFiles\PaTrainingProjects.zip</Arg>
				<Arg>$(RootBuildDir)\output\release\training</Arg>
			</CommandItem>
		</Commands>
	</PostBuildCommands>
</BuildProcess>